      "title": "Server Setup",
      "description": "Create a new server app.js and run it.",
      "type": "file_system",
      "points": 10,
      "checks": [
        {
          "fileExists": "app.js",
          "description": "app.js file exists",
          "optional": true
        },
        {
          "fileExists": "main.js",
          "description": "main.js file exists",
          "optional": true
        },
        {
          "fileContains": "require.*express",
          "description": "Requires express module"
        },
        {
          "fileContains": "express\\(\\)",
          "description": "Creates express app"
        },
        {
          "fileContains": "listen",
          "description": "Server listens on a port"
        }
      ]
    },
    {
      "id": "q2_todos_array",
      "title": "Todos Array Initialization",
      "description": "In the global scope create an array with initial todos.",
      "type": "file_system",
      "points": 10,
      "checks": [
        {
          "fileContains": "const todos",
          "description": "Declares todos array"
        },
        {
          "fileContains": "wake up",
          "description": "Contains 'wake up' todo"
        },
        {
          "fileContains": "Eat Breakfast",
          "description": "Contains 'Eat Breakfast' todo"
        },
        {
          "fileContains": "isCompleted.*false",
          "description": "Sets isCompleted to false"
        }
      ]
    },
