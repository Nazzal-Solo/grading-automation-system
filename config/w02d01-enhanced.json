          "parameters": [],
          "expectedReturn": "number",
          "testCases": [
            { "input": [], "expected": 4, "description": "First countUp call" },
            { "input": [], "expected": 5, "description": "Second countUp call" },
            { "input": [], "expected": 6, "description": "Third countUp call" },
            { "input": [], "expected": 7, "description": "Fourth countUp call" },
            { "input": [], "expected": 8, "description": "Fifth countUp call" }
          ],
          "weight": 1,
          "category": "closure_functions"
        },
