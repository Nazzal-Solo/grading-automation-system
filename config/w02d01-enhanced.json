          "type": "scope_prediction",
          "description": "Predict the value of the following variables and explain why",
          "functionName": "scopePrediction",
          "parameters": [],
          "expectedReturn": "scope analysis",
          "testCases": [
            { "input": [], "expression": "age", "expected": 30, "description": "let age scope test" },
            { "input": [], "expression": "myName", "expected": "John", "description": "const myName scope test" }
          ],
          "weight": 1,
          "category": "scope_basics"
        },
        {
          "id": "Q2",
