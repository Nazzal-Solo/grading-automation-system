        {
          "id": "Q9",
          "type": "function_definition",
          "description": "Write a function login_v01 that accepts two string arguments, username and password, and returns a string login successful if the username length is more than 6 and the password length is more than or equal to 8 otherwise return login failed",
          "functionName": "login_v01",
          "expectedParameters": ["username", "password"],
          "testCases": [
            {
              "input": ["John", "1234"],
              "expected": "login failed",
              "description": "Short username and password"
            },
            {
              "input": ["John", "12345678"],
              "expected": "login failed",
              "description": "Short username, long password"
            },
            {
              "input": ["john_doe", "123456"],
              "expected": "login failed",
              "description": "Long username, short password"
            },
            {
              "input": ["john_doe", "12345678"],
              "expected": "login successful",
              "description": "Long username and password"
            }
          ],
          "weight": 1,
          "category": "login_logic",
          "flexible": false
        },
        {
